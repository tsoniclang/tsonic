{
  "name": "@tsonic/backend",
  "version": "0.0.30",
  "description": ".NET build orchestration for Tsonic compiler",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
