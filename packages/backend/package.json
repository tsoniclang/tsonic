  },
  "dependencies": {
    "@tsonic/emitter": "0.0.30",
    "@tsonic/frontend": "0.0.30"
  },
  "devDependencies": {
    "@types/chai": "5.2.2",
    "@types/mocha": "10.0.10",
    "@types/node": "20.14.0",
    "chai": "5.3.3",
    "mocha": "11.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
