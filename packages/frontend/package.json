{
  "name": "@tsonic/frontend",
  "version": "0.0.62",
  "description": "TypeScript parser and IR builder for Tsonic compiler",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types/explicit-views.js": {
      "types": "./dist/types/explicit-views.d.ts",
      "default": "./dist/types/explicit-views.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "pretest": "npm run build",
    "test": "mocha --require ../../test/mocha/checkpoint.cjs --parallel --timeout 10000 'dist/**/*.test.js'",
    "test:watch": "mocha --require ../../test/mocha/checkpoint.cjs 'dist/**/*.test.js' --watch"
  },
  "dependencies": {
    "typescript": "5.9.2"
  },
  "devDependencies": {
    "@types/chai": "5.2.2",
    "@types/mocha": "10.0.10",
    "@types/node": "20.14.0",
    "chai": "5.3.3",
    "mocha": "11.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
